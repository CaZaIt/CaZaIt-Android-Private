<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/login_back"
        tools:context=".ui.component.signin.SignInActivity">

        <ImageView
            android:id="@+id/iv_login_logo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/login_logo"
            android:layout_marginTop="167dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_login_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textColor="@color/main_black"
            android:layout_marginTop="74dp"
            android:layout_marginStart="58dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_login_logo"
            app:layout_constraintStart_toStartOf="parent"/>

        <EditText
            android:id="@+id/et_email"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="@string/hint_username"
            android:background="@drawable/roundcorner_name_pass"
            android:paddingStart="22.91dp"
            android:layout_marginTop="7dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_login_text"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <EditText
            android:id="@+id/et_password"
            android:layout_width="0dp"
            android:layout_height="55dp"
            android:hint="@string/hint_password"
            android:background="@drawable/roundcorner_name_pass"
            android:paddingStart="22.91dp"
            android:layout_marginTop="6dp"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            app:layout_constraintTop_toBottomOf="@+id/et_email"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_dologin"
            android:layout_width="0dp"
            android:layout_height="58dp"
            android:text="@string/btn_dologin"
            android:textStyle="bold"
            android:textSize="21sp"
            android:textColor="@color/main_white"
            android:background="@drawable/roundcorner_dologin"
            android:layout_marginTop="27dp"
            android:layout_marginStart="38dp"
            android:layout_marginEnd="38dp"
            app:layout_constraintTop_toBottomOf="@+id/et_password"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <TextView
            android:id="@+id/tv_signup"
            android:layout_width="0dp"
            android:layout_height="26dp"
            android:text="@string/btn_signup"
            android:textSize="19sp"
            android:textColor="@color/main_black"
            android:layout_marginTop="9dp"
            android:layout_marginStart="164dp"
            android:layout_marginEnd="164dp"
            app:layout_constraintTop_toBottomOf="@+id/btn_dologin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
